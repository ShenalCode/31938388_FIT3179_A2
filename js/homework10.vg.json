{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 300,  
    "background": "#f8e9f9",
    "data": {
      "url": "https://raw.githubusercontent.com/ShenalCode/31938388_FIT3179_A2/main/data/WHR_all.csv"
    },
    "selection": {
      "region_highlight": {
      "type": "single",
      "fields": ["region"],
      "bind": "legend"
      }
    },      
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "happiness_score",
        "type": "quantitative",
        "title": "Happiness Score",
        "axis": {
          "tickCount": 7
      },
        "scale": {
          "zero": false
        }
      },
      "y": {
        "field": "gdp_per_capita",
        "type": "quantitative",
        "title": "GDP per Capita",
        "axis": {
          "tickCount": 7
        }
      },
      "color": {
        "field": "region", 
        "type": "nominal",
        "title": "Region",
        "scale": {
          "range": ["#1f77b4", "#2ca02c", "#8c564b", "#d62728", "#bcbd22", "#ff7f0e", "#e377c2", 
        "#9467bd", "#17becf", "#7f7f7f", "#ff9896"]
        }
      },
      "opacity": {
        "condition": {"selection": "region_highlight", "value": 0.6},
        "value": 0.05
        },
      "tooltip": [
        {
            "field": "country",
            "type": "nominal",
            "title": "Country"
        },
        {
            "field": "region",
            "type": "nominal",
            "title": "Region"
        },
        {
          "field": "year",
          "type": "nominal",
          "title": "Year"
        },
        {
            "field": "happiness_score",
            "type": "quantitative",
            "title": "Happiness Score",
            "format": ".2f"
        },
        {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "title": "GDP per Capita",
            "format": ".2f"
        }
    ]

    }
  }
  