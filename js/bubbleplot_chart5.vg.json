{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "background": "#ffffe7",
  "title": "Social Support and Freedom to Make Choices",
  "config": {
    "title": {
      "fontSize": 16
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ShenalCode/31938388_FIT3179_A2/main/data/WHR_all.csv"
  },
  "params": [
    {
      "name": "region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "name": "Select Region: "
      }
    },
    {
      "name": "score_above",
      "value": 1,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 8,
        "step": 0.5,
        "name": "Happiness score: "
      }
    }
  ],
  "transform": [
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "social_support",
          "as": "average social support"
        },
        {
          "op": "mean",
          "field": "freedom_to_make_life_choices",
          "as": "average choices"
        },
        {
          "op": "mean",
          "field": "happiness_score",
          "as": "average_happiness_score"
        }
      ],
      "groupby": [
        "country",
        "region"
      ]
    },
    {
      "filter": "region_selection == null || datum.region == region_selection"
    },
    {
      "filter": "datum.average_happiness_score >= score_above"
    }
  ],
  "encoding": {
    "x": {
      "field": "average social support",
      "type": "quantitative",
      "title": "Social Support",
      "axis": {
        "tickCount": 9
      },
      "scale": {
        "domain": [
          0,
          1.6
        ]
      }
    },
    "y": {
      "field": "average choices",
      "type": "quantitative",
      "title": "Freedom to Choices",
      "axis": {
        "tickCount": 8
      },
      "scale": {
        "domain": [
          0,
          0.7
        ]
      }
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "average_happiness_score",
          "type": "quantitative",
          "title": "Happiness Score",
          "scale": {
            "domain": [
              0,
              2,
              4,
              6,
              8
            ],
            "range": [
              0,
              100,
              200,
              400,
              800
            ]
          }
        },
        "color": {
          "field": "region",
          "type": "nominal",
          "title": "Region",
          "scale": {
            "domain": [
              "Africa",
              "Central and Eastern Europe",
              "Commonwealth of Independent States",
              "East Asia",
              "Latin America and Caribbean",
              "Middle East and North Africa",
              "North America and ANZ",
              "South Asia",
              "Southeast Asia",
              "Sub-Saharan Africa",
              "Western Europe"
            ],
            "range": [
              "#1f77b4",
              "#2ca02c",
              "#8c564b",
              "#d62728",
              "#bcbd22",
              "#ff7f0e",
              "#e377c2",
              "#9467bd",
              "#17becf",
              "#7f7f7f",
              "#ff9896"
            ]
          }
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "region",
            "type": "nominal",
            "title": "Region"
          },
          {
            "field": "average_happiness_score",
            "type": "quantitative",
            "title": "Happiness Score",
            "format": ".2f"
          },
          {
            "field": "average social support",
            "type": "quantitative",
            "title": "Social Support",
            "format": ".2f"
          },
          {
            "field": "average life expectancy",
            "type": "quantitative",
            "title": "Life Expectancy",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "datum.country == 'Afghanistan'"
        }
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dy": 10,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "country",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "tooltip": [
          {
            "field": "country",
