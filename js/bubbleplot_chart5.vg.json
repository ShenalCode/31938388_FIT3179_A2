            "title": "Country"
          },
          {
            "field": "happiness_score",
            "type": "quantitative",
            "title": "Happiness Score",
            "format": ".2f"
          },
          {
            "field": "year",
            "title": "Year",
            "type": "temporal",
            "format": "%Y"
          }
        ]
      }
