{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 300,
  "title": "GDP per Capita",
  "config": {
    "title": {
      "fontSize": 16
    }
  },
  "background": "#ffffe7",
  "data": {
    "url": "https://raw.githubusercontent.com/ShenalCode/31938388_FIT3179_A2/main/data/WHR_all.csv"
  },
  "params": [
    {
      "name": "region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "name": "Select Region: "
      }
    },
    {
      "name": "score_above",
      "value": 1,
      "bind": {
        "input": "range",
        "min": 1,
        "max": 8,
        "step": 0.5,
        "name": "Filter happiness score: "
      }
    },
    {
      "name": "gdp_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 2.3,
        "step": 0.2,
        "name": "GDP per Capita: "
      }
    },
    {
      "name": "year_above",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "region_selection == null || datum.region == region_selection"
    },
    {
      "filter": "datum.happiness_score >= score_above"
    },
    {
      "filter": "datum.gdp_per_capita >= gdp_above"
    },
    {
      "filter": "year(datum.year) <= year_above"
    }
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "happiness_score",
      "type": "quantitative",
      "title": "Happiness Score",
      "axis": {
        "tickCount": 7
      },
      "scale": {
        "zero": false,
        "domain": [
          1,
          8
        ]
      }
    },
    "y": {
      "field": "gdp_per_capita",
      "type": "quantitative",
      "title": "GDP per Capita",
      "axis": {
        "tickCount": 7
      },
      "scale": {
        "domain": [
          0,
          2.3
        ]
      }
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "title": "Region",
      "scale": {
        "domain": [
          "Africa",
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "range": [
          "#1f77b4",
          "#2ca02c",
          "#8c564b",
          "#d62728",
          "#bcbd22",
          "#ff7f0e",
          "#e377c2",
          "#9467bd",
          "#17becf",
          "#7f7f7f",
          "#ff9896"
        ]
      }
    },
    "opacity": {
      "value": 0.8
    },
    "tooltip": [
      {
        "field": "country",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "region",
        "type": "nominal",
        "title": "Region"
      },
      {
        "field": "year",
        "type": "nominal",
        "title": "Year"
      },
      {
        "field": "happiness_score",
        "type": "quantitative",
        "title": "Happiness Score",
        "format": ".2f"
      },
      {
        "field": "gdp_per_capita",
        "type": "quantitative",
        "title": "GDP per Capita",
        "format": ".2f"
      }
    ]
  }
}